<div
  class="hover-strip item {{~#if isGlowing}} neon-glow-strong-{{isGlowing}}{{/if}} {{~#each stripClasses}} {{this}}{{/each}}"
  data-type={{type}}
  {{~#if dataset}}{{#each dataset as |val key|}}
    data-{{key}}="{{val}}"
  {{/each}}{{/if}}
>
  <span class="strip-bg"></span>

{{#if display}}

  <div
    class="strip-name"
    data-clamplines="1"
    {{~#if dataset}}{{#each dataset as |val key|}}
      data-{{key}}="{{val}}"
    {{/each}}{{/if}}
  >{{display}}</div>

  <span class="button-strip"><span class="button-spacer"></span>

    {{#each buttons as |bdata|}}
      <button
        class="strip-button icon-container {{~#if bdata.buttonClasses}}{{#each bdata.buttonClasses}} {{this}}{{/each}}{{/if}}"
        {{~#each bdata.dataset as |val key|}}
          data-{{key}}="{{val}}"
        {{/each}}
      >
        {{> "systems/kult4th/templates/components/svg.hbs" key=(getImgName bdata.icon)}}
        {{#if bdata.tooltip}}
          <span class="tooltip button-tooltip">{{{formatForKult bdata.tooltip}}}</span>
          <span class="tooltip button-tooltip button-tooltip-flare">{{{formatForKult bdata.tooltip}}}</span>
        {{/if}}
      </button>
    {{/each}}

  </span>

  {{> "systems/kult4th/templates/components/icon.hbs"
    icon=icon
    type=type
    name=name
    tooltip=tooltip
  }}

{{else}}

	<div
    id="{{id}}"
    class="strip-name content-editable clamp-text"
    data-field="{{dataTarget}}"
    data-placeholder="{{placeholder}}"
    data-clamplines="1"
    {{~#if dataset}}{{#each dataset as |val key|}}
      data-{{key}}="{{val}}"
    {{/each}}{{/if}}
  ></div>

  {{> "systems/kult4th/templates/components/icon.hbs"
    icon=icon
    type=type
    name=name
  }}

{{/if}}

</div>