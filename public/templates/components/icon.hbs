<div class="icon-container icon-{{type}}">
  {{#if (test icon "in" ".svg")}}
    <img class="chat-icon" src="{{icon}}" />
    <svg class="non-chat-icon svg-container" title="{{name}}">
      <use href="{{icon}}#icon"></use>
    </svg>
  {{else}}
    <img src="{{icon}}" />
  {{/if}}
</div>
{{#if tooltip}}
  <span class="tooltip strip-tooltip">{{{formatForKult tooltip}}}</span>
{{/if}}