<div class="gear-container gear-top-right">
	{{> "systems/kult4th/templates/components/svg-flat.hbs" "gear-e"}}
</div>
<div class="gear-container gear-bottom-left">
	{{> "systems/kult4th/templates/components/svg-flat.hbs" "gear-c"}}
</div>
<div class="gear-container gear-bottom-right">
	{{> "systems/kult4th/templates/components/svg-flat.hbs" "gear-g"}}
