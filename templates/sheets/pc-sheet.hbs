<form class="{{cssClass}}" autocomplete="off">
	<nav class="nav-panel">
		<img class="img-border" src="../systems/kult4th/assets/layout/portrait-frame.webp" />
		<img class="profile-image blur-background" src="{{actor.img}}" />
		<img class="profile-image" src="{{actor.img}}" data-edit="img" />
		<div class="tabs" data-group="primary">
			<a class="nav-tab" data-tab="front">
				<span class="nav-tab-label">Front</span>
				<img class="nav-tab-animation" src="../systems/kult4th/assets/animations/selection-nova.webp" />
			</a>
			<a class="nav-tab" data-tab="bio">
				<span class="nav-tab-label">Bio</span>
				<img class="nav-tab-animation" src="../systems/kult4th/assets/animations/selection-nova.webp" />
			</a>
			<a class="nav-tab" data-tab="assets">
				<span class="nav-tab-label">Assets</span>
				<img class="nav-tab-animation" src="../systems/kult4th/assets/animations/selection-nova.webp" />
			</a>
			<a class="nav-tab" data-tab="notes">
				<span class="nav-tab-label">Journal</span>
				<img class="nav-tab-animation" src="../systems/kult4th/assets/animations/selection-nova.webp" />
			</a>
			<a class="nav-tab" data-tab="advancement">
				<span class="nav-tab-label">Advancement</span>
				<img class="nav-tab-animation" src="../systems/kult4th/assets/animations/selection-nova.webp" />
			</a>
			<a class="nav-tab" data-action="toggleLock">
				<span class="nav-tab-label">Lock</span>
				<img class="nav-tab-animation" src="../systems/kult4th/assets/animations/selection-nova.webp" />
			</a>
			<a class="nav-tab" data-action="selectImg">
				<span class="nav-tab-label">Image</span>
				<img class="nav-tab-animation" src="../systems/kult4th/assets/animations/selection-nova.webp" />
			</a>
			<a class="nav-tab" data-tab="settings">
				<span class="nav-tab-label">Settings</span>
				<img class="nav-tab-animation" src="../systems/kult4th/assets/animations/selection-nova.webp" />
			</a>
  	</div>
		<a class="header-button close"><i class="fas fa-times"></i></a>
		<a class="header-button minimize"><i class="fas fa-minus"></i></a>
	</nav>
	<div class="bg-container">
		<div class="sheet-border corner top-left"></div>
		<div class="sheet-border horiz-bar top"></div>
		<div class="sheet-border corner top-right"></div>
		<div class="sheet-border vert-bar left"></div>
		<div class="sheet-border vert-bar right"></div>
		<div class="sheet-border corner bot-left"></div>
		<div class="sheet-border horiz-bar bot"></div>
		<div class="sheet-border corner bot-right"></div>
	</div>
	<header class="sheet-header">
		<input type="text" class="actor-name" name="name" value="{{actor.name}}" placeholder="" />
	</header>
	<main class="tab-content">

		<section class="active tab front" data-group="primary" data-tab="front">
			<section class="subsection dramatic-hooks">
				<label class="hook-label">Hooks</label>
				{{#each data.data.dramaticHooks}}
				<div class="dramatic-hook">
					<input type="checkbox" name="data.dramaticHooks.{{@index}}.isChecked" {{checked isChecked}} />
					<input type="text" name="data.dramaticHooks.{{@index}}.value" value="{{value}}" />
				</div>
				{{/each}}
			</section>
			<section class="subsection status">
				<div class="stability"></div>
				<div class="wounds"></div>
				<div class="edges"></div>
				<div class="dice-modifiers"></div>
			</section>
			<section class="subsection attributes">
				<h1 class="subsection-header">Attributes</h1>
				{{#each attributes}}
				{{> "systems/kult4th/templates/partials/attribute-box.hbs"}}
				{{/each}}
			</section>
			<section class="subsection flex-item-list basic-moves">
				<h1 class="subsection-header">Basic Moves</h1>
				{{#each baseMoves}}
				{{> "systems/kult4th/templates/partials/basic-move-card.hbs"}}
				{{/each}}
			</section>
			<section class="subsection flex-item-list special-moves">
				<h1 class="subsection-header">Special Moves</h1>
				{{#each derivedMoves}}
				{{> "systems/kult4th/templates/partials/derived-move-card.hbs"}}
				{{/each}}
			</section>
			<section class="subsection flex-item-list session-checks">
				<h1 class="subsection-header">Session Checks</h1>
			</section>
			<section class="subsection flex-item-list attacks">
				<h1 class="subsection-header">Attacks</h1>
				{{#each attacks}}
				{{> "systems/kult4th/templates/partials/attack-card.hbs"}}
				{{/each}}
			</section>
		</section>

		<section class="tab bio" data-group="primary" data-tab="bio">
			<section class="subsection description">
				<h1 class="subsection-header">Description</h1>
				{{editor content=data.data.description target="data.description" button=true owner=owner editable=editable}}
			</section>
			<section class="subsection flex-item-list advantages">
				<h1 class="subsection-header">Advantages</h1>
				{{#each advantages}}
				{{> "systems/kult4th/templates/partials/advantage-card.hbs"}}
				{{/each}}
			</section>
			<section class="subsection flex-item-list disadvantages">
				<h1 class="subsection-header">Disadvantages</h1>
				{{#each disadvantages}}
				{{> "systems/kult4th/templates/partials/disadvantage-card.hbs"}}
				{{/each}}
			</section>
			<section class="subsection flex-item-list darksecrets">
				<h1 class="subsection-header">Dark Secrets</h1>
				{{#each darksecrets}}
				{{> "systems/kult4th/templates/partials/dark-secret-card.hbs"}}
				{{/each}}
			</section>
			<section class="subsection flex-item-list relations">
				<h1 class="subsection-header">Relations</h1>
				{{#each relations}}
				{{> "systems/kult4th/templates/partials/relation-card.hbs"}}
				{{/each}}
			</section>
		</section>

		<section class="tab assets" data-group="primary" data-tab="assets"></section>
		<section class="tab notes" data-group="primary" data-tab="notes"></section>
		<section class="tab advancement" data-group="primary" data-tab="advancement"></section>
	</main>
</form>