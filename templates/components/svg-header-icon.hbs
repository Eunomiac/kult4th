<svg class="svg-icon-def svg-{{type}} svg-{{getImgName name}}" viewBox="0 0 512 512">
	{{#if (test type "==" "weapon")}}
	<defs>
		<clipPath id="icon-bg">
			<polygon points="376,463.85,136,463.85,16,256,136,48.15,376,48.15,496,256" fill="rgb(100,0,0)" fill-opacity="1" stroke="#ff0000" stroke-opacity="1" stroke-width="16" transform="translate(-25.6, -25.6) scale(1.1, 1.1) rotate(0, 256, 256)" />
		</clipPath>
	</defs>
	{{#with (getIconPaths "weapon" "BG-HEX") as |bgPath|}}
	<path class="d-bg" d="{{{bgPath.d}}}" fill-opacity="1" stroke-opacity="1" stroke-width="10" clip-path="#icon-bg"  transform="translate(-25.6, -25.6) scale(1.1, 1.1) rotate(0, 256, 256)"/>
	{{/with}}
	{{/if}}

	{{#with (getIconPaths type name sourceItem) as |path|}}
	<path class="d-fg" d="{{{path.d}}}" fill-opacity="1" stroke-opacity="1" stroke-width="16" />
	{{/with}}
</svg>