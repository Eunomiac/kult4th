{{!-- {{log "CARD" this}}
{{log data}}
{{log data.id}}
{{log data._id}}
{{log _id}} --}}

<div class="card {{data.type}}-card {{~#if (eq data.type "move")}} move-{{moveType}}{{/if}}">
	<div class="item-draggable {{data.type}}-info item-name" data-item-id="{{data.id}}{{data._id}}">
		<a class="{{#if data.koFlags.isRolled}}move-roll{{else}}item-post{{/if}}" title="{{#if data.koFlags.isRolled}}Click to Roll Move{{else}}Click to Display {{typeDisplay}} to Chat{{/if}}">
			<img src="{{data.img}}" data-edit="img" title="{{data.name}}" />
			{{#if data.shortName}}{{data.shortName}}{{else}}{{data.name}}{{/if}}
		</a>
		{{#if data.koFlags.isRolled}}
		<a class="item-control item-post" title="Click to Display {{typeDisplay}} to Chat"><i
				class="far fa-comment-alt"></i></a>
		{{/if}}
		{{#unless isSheetOpen}}
		<a class="item-control item-edit item-view" title="View {{typeDisplay}}"><i class="fas fa-eye"></i></a>
		{{/unless}}
		{{#if isSheetOpen}}
		<a class="item-control item-delete" title="{{localize " kult4e.DeleteItem"}}"><i class="fas fa-trash"></i></a>
		<a class="item-control item-edit" title="{{localize " kult4e.EditItem"}}"><i class="fas fa-edit"></i></a>
		{{/if}}
		{{#if data.data.hasTokens}}
		{{#if (eq data.type "disadvantage")}}
		{{#if isGM}}
		{{#if (gte data.data.tokens 0)}}
		<span class="hold-tally advantage-column">{{localize "kult4e.Hold"}}: <a class="token-add" title="{{localize "
				kult4e.AddHold"}}"><i class="far fa-plus-square"></i></a> {{data.data.tokens}}
			{{#if (gte data.data.tokens 1)}}
			<a class="token-spend" title="{{localize " kult4e.SpendHold"}}"><i class="far fa-minus-square"></i></a>
			{{/if}}
		</span>
		{{/if}}
		{{/if}}
		{{else}}
		{{#if (gte data.data.tokens 0)}}
		<span class="edge-tally advantage-column">{{localize "kult4e.Edge"}}: <a class="token-add-edge" title="{{localize "
				kult4e.AddEdge"}}"><i class="far fa-plus-square"></i></a> {{data.data.tokens}}
			{{#if (gte data.data.tokens 1)}}
			<a class="token-spend-edge" title="{{localize " kult4e.SpendEdge"}}"><i class="far fa-minus-square"></i></a>
			{{/if}}
		</span>
		{{/if}}
		{{/if}}
		{{/if}}
	</div>
</div>