<div class="card advantage-card">
    <div class="item-draggable advantage-info item-name" data-item-id="{{data._id}}">
        <a class="item-post" title="Show Advantage"> <img src="{{data.img}}" data-edit="img" title="{{data.name}}"/> {{data.name}} </a>
				<a class="item-control item-post" title="{{localize "kult4e.ShowItem"}}"><i class="far fa-comment-alt"></i></a>
        {{#unless isSheetOpen}}
    		<a class="item-control item-edit item-view" title="View Item"><i class="fas fa-eye"></i></a>
				{{/unless}}
				{{#if isSheetOpen}}
        <a class="item-control item-delete" title="{{localize "kult4e.DeleteItem"}}"><i class="fas fa-trash"></i></a>
        <a class="item-control item-edit" title="{{localize "kult4e.EditItem"}}"><i class="fas fa-edit"></i></a>
				{{/if}}
        {{#if data.data.hasTokens}}
          {{#if (gte data.data.tokens 0)}}
          <span class="advantage-column">{{localize "kult4e.Edge"}}: <a class="token-add-edge" title="{{localize "kult4e.AddEdge"}}"><i class="far fa-plus-square"></i></a> {{data.data.tokens}}
            {{#if (gte data.data.tokens 1)}}
            <a class="token-spend-edge" title="{{localize "kult4e.SpendEdge"}}"><i class="far fa-minus-square"></i></a>
            {{/if}}
          </span>
          {{/if}}
        {{/if}}
    </div>
</div>