<div class="card weapon-card">
  <div class="move-info item-name" data-item-id="{{data._id}}">
    <span class="weapon-column">{{data.name}}</span>
    {{#if data.data.ammo.max}}
    <span class="weapon-column">{{localize "kult4e.Ammo"}}: {{data.data.ammo.value}}/{{data.data.ammo.max}}</span>
		{{else}}
		<span class="weapon-column">&nbsp;</span>
    {{/if}}
		<span class="weapon-column">{{localize "kult4e.Harm"}}: {{data.data.harm}}</span>
		<div class="item-control-container">
			<a class="item-control item-post" title="{{localize "kult4e.ShowItem"}}"><i class="far fa-comment-alt"></i></a>
			{{#unless isSheetOpen}}
			<a class="item-control item-edit item-view" title="View Weapon Details"><i class="fas fa-eye"></i></a>
			{{/unless}}
			{{#if isSheetOpen}}
			<a class="item-control item-delete" title="{{localize "kult4e.DeleteItem"}}"><i class="fas fa-trash"></i></a>
			<a class="item-control item-edit" title="{{localize "kult4e.EditItem"}}"><i class="fas fa-edit"></i></a>
			{{/if}}
		</div>
  </div>
</div>