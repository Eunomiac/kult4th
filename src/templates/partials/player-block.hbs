<div class="panel panel-player-character">
  <div class="panel-bg">
    <img src="{{img}}" />
  </div>
  <div class="player-name">{{name}}</div>
  <section class="player-panel-main">
    <div class="panel-column panel-column-left">
      <div class="attribute-summary">
      {{#each attributeData}}
        {{#let
          anchorName=(getUniqueID "attribute-panel-anchor")
          popoverID=(getUniqueID "attribute-panel-popover")
        }}
        <div class="attribute-box attribute-{{key}} attribute-{{value}}"
          style="anchor-name: --{{anchorName}}"
          popovertarget="{{popoverID}}"
        >
          <span class="attribute-name">{{name}}</span>
          <span class="attribute-value">{{signNum value}}</span>
        </div>
        <div id="{{popoverID}}"
            style="position-anchor: --{{anchorName}};"
            popover>
          {{name}}
        </div>
        {{/let}}
      {{/each}}
      </div>
    </div>
    <div class="panel-column panel-column-right">
      {{#each derivedMoves}}
      {{> "systems/kult4th/templates/components/hover-strip.hbs" hoverStrip}}
      {{/each}}
    </div>
  </section>
</div>