{{log "ask-for-item.hbs" this}}
<div class="dialog-container item-selection-container">
  <h1 class="dialog-title">{{title}}</h1>
  {{#if bodyText}}<p>{{{formatForKult bodyText}}}</p>{{/if}}

  <div class="item-portrait-panel">
    {{#each itemList as |item|}}
      <div class="item-portrait-button tooltip-trigger" data-item-id="{{item.id}}">
        <span class="item-portrait-name">{{item.name}}</span>
        <div class="item-portrait-icon" style="mask:url('{{item.img}}') no-repeat center;-webkit-mask:url('{{item.img}}') no-repeat center"></div>
        <div class="tooltip">
          <h2><center>{{item.name}}</center></h2>
          {{{formatForKult item.shortDesc}}}
        </div>
      </div>
    {{/each}}
  </div>

  {{!-- Panel --}}

  {{#if subText}}<p class="sub-text">{{{formatForKult subText}}}</p>{{/if}}
</div>
